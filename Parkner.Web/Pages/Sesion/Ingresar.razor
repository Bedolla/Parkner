@page  "/ingresar"
@layout IndividualLayout

<style>
    body
    {
        background-color: #6658dd;
        background-image: url("images/bg-pattern.png");
        background-position: center;
        background-size: cover;
    }
</style>

<div class="col-12 mb-5 mt-5">
    <div class="container">
        <div class="justify-content-center row">
            <div class="col-lg-6 col-md-8 col-xl-5">
                <div class="bg-pattern card">

                    <div class="card-body p-4">

                        <div class="m-auto text-center w-75">
                            <span class="logo-lg">
                                <img alt="" height="200" src="images/Logo.svg">
                            </span>
                        </div>

                        <EditForm Model="@Modelo" OnValidSubmit="Enviar" Context="c">
                            <DataAnnotationsValidator />

                            <div class="form-group mb-3">
                                <label for="correo">Correo</label>
                                <InputText @bind-Value="Modelo.Correo" class="form-control" id="correo" placeholder="Correo" type="email" />
                                <ValidationMessage For="@(() => Modelo.Correo)" />
                            </div>

                            <div class="form-group mb-3">
                                <InputPass @bind-Value="Modelo.Clave" class="@c.FieldCssClass( () => Modelo.Clave)" Label="Cotraseña" Id="clave" PlaceHolder="Contraseña" ValidationFor="@(() => Modelo.Clave)" />
                            </div>

                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-block btn-primary" type="submit"> Ingresar </button>
                            </div>
                        </EditForm>

                    </div>
                </div>

                <div class="mt-3 row">
                    <div class="col-12 text-center">
                        <p> <a class="ml-1 text-white-50" href="/">¿Olvidó su contraseña?</a></p>
                        <p class="text-white-50">
                            ¿No tiene una cuenta?
                            <NavLink class="ml-1 text-white" href="/crear">
                                <b>Regístrese</b>
                            </NavLink>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
