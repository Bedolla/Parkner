@page  "/responsables/ver/{id}"
@using Parkner.Core.Constants

<!-- Titulo de la Pagina: Inicio -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Parkner</li>
                    <li class="breadcrumb-item">Responsables</li>
                    <li class="breadcrumb-item active">Ver</li>
                </ol>
            </div>
            <h4 class="page-title">Detalles de @Modelo.Nombre @Modelo.Apellido</h4>
        </div>
    </div>
</div>
<!-- Titulo de la Pagina: Fin -->

<!-- Carta: Inicio -->
<div class="row">
    <div class="col-xl-12">
        <div class="card-box ribbon-box">

            <div class="mano ribbon ribbon-primary float-left" @onclick="Cancelar"><i class="text-white mdi mdi-arrow-left-bold mr-1"></i> Regresar</div>
            <div class="card-body text-center">

                <EditForm Model="@Modelo" class="mt-3">
                    <img src="@($"{Uris.Fotos}{Modelo.Foto}")" class="rounded avatar-xxl img-thumbnail" alt="Foto">
                    <h4 class="mb-0">@Modelo.Nombre @Modelo.Apellido</h4>
                    <p class="text-muted mb-0">@Modelo.Correo</p>
                    <p><span class="strong">Miembro desde </span><span class="text-muted">@Modelo.Creacion.Date.Year</span></p>
                </EditForm>

            </div>
        </div>
    </div>
</div>
<!-- Carta: Fin -->

<Parkner.Web.Pages.Responsables.Estacionamientos.Listar></Parkner.Web.Pages.Responsables.Estacionamientos.Listar>

<Parkner.Web.Pages.Responsables.Ganancias.Listar></Parkner.Web.Pages.Responsables.Ganancias.Listar>