@page  "/responsables/estacionamientos/cajones/borrar/{id}"

<!-- Titulo de la Pagina: Inicio -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Parkner</li>
                    <li class="breadcrumb-item">Responsables</li>
                    <li class="breadcrumb-item">Estacionamientos</li>
                    <li class="breadcrumb-item">Cajones</li>
                    <li class="breadcrumb-item active">Borrar</li>
                </ol>
            </div>
            <h4 class="page-title">Borrado del cajón @Modelo.Nombre</h4>
        </div>
    </div>
</div>
<!-- Titulo de la Pagina: Fin -->

<!-- Carta: Inicio -->
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body text-center">

                <EditForm Model="@Modelo" OnValidSubmit="Enviar" Context="c">
                    <h4 class="mt-0 mb-3 text-danger">¿Realmente desea borrar al cajón?</h4>

                    <h4 class="mb-0">@Modelo.Nombre</h4>
                    <p class="text-muted"><Check Disabled="true" Checked="@Modelo.Disponible" ReadOnly="true">Disponible</Check></p>

                    <div class="form-group mt-2 mb-0 text-center">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-1 mb-sm-1 mb-md-0 mb-lg-0 mb-xl-0">
                                <button class="btn btn-block btn-warning mr-md-1 mr-lg-1 mr-xl-1 waves-light" type="reset" @onclick="Cancelar"> Cancelar </button>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-3 mb-sm-3 mb-md-0 mb-lg-0 mb-xl-0">
                                <button class="btn btn-block btn-danger ml-md-1 ml-lg-1 ml-xl-1 waves-light" type="submit"> Borrar </button>
                            </div>
                        </div>
                    </div>
                </EditForm>

            </div>
        </div>
    </div>
</div>
<!-- Carta: Fin -->
