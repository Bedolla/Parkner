@page  "/responsables/estacionamientos/empleados/agregar"
@using Parkner.Data.Entities

<!-- Titulo de la Pagina: Inicio -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Parkner</li>
                    <li class="breadcrumb-item">Responsables</li>
                    <li class="breadcrumb-item">Estacionamientos</li>
                    <li class="breadcrumb-item">Empleados</li>
                    <li class="breadcrumb-item active">Agregar</li>
                </ol>
            </div>
            <h4 class="page-title">Agregar empleado</h4>
        </div>
    </div>
</div>
<!-- Titulo de la Pagina: Fin -->

<!-- Carta: Inicio -->
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <EditForm Model="@Modelo" OnValidSubmit="Enviar" Context="c">
                    <DataAnnotationsValidator/>

                    <div class="form-group mb-3">
                        <label for="empleados">Empleados</label>
                        <Select TValue="string" @bind-SelectedValue="@Modelo.EmpleadoSeleccionado" class="form-control" id="empleados">
                            @if (Modelo.Empleados?.Count > 0)
                            {
                                @foreach (Empleado empleado in Modelo.Empleados)
                                {
                                    <SelectItem Value="@empleado.Id">@empleado.Nombre @empleado.Apellido</SelectItem>
                                }
                            }
                        </Select>
                        <ValidationMessage For="@(() => Modelo.EmpleadoSeleccionado)"/>
                    </div>

                    <div class="form-group mb-0 text-center">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-1 mb-sm-1 mb-md-0 mb-lg-0 mb-xl-0">
                                <button class="btn btn-block btn-danger mr-md-1 mr-lg-1 mr-xl-1" type="reset" @onclick="Cancelar"> Cancelar </button>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-3 mb-sm-3 mb-md-0 mb-lg-0 mb-xl-0">
                                <button class="btn btn-block btn-success ml-md-1 ml-lg-1 ml-xl-1" type="submit"> Agregar </button>
                            </div>
                        </div>
                    </div>
                </EditForm>

            </div>
        </div>
    </div>
</div>
