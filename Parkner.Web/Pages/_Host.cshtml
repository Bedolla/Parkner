@page "/"
@namespace Parkner.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-MX">
    <head>
        <meta charset="utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
        <title>Parkner</title>
        <base href="~/"/>

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="_content/Blazored.Modal/blazored-modal.css" rel="stylesheet"/>

        <!-- Plugins css -->
        <link href="libs/chart.js/Chart.min.css" rel="stylesheet" type="text/css"/>

        <link href="_content/Blazorise/blazorise.css" rel="stylesheet"/>
        <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet"/>

        <script src="libs/chart.js/Chart.min.js"></script>
        <script src="_content/Blazorise.Charts/blazorise.charts.js"></script>

        <!-- App css -->
        <link href="css/bootstrap-material.min.css" rel="stylesheet" type="text/css" id="bs-default-stylesheet"/>
        <link href="css/app-material.min.css" rel="stylesheet" type="text/css" id="app-default-stylesheet"/>

        <!-- icons -->
        <link href="css/icons.min.css" rel="stylesheet" type="text/css"/>

        <link href="css/site.css" rel="stylesheet"/>
    </head>
    <body>

        <!-- Carga : Fin -->
        <div id="preloader">
            <div id="status">
                <div class="spinner">Cargando...</div>
            </div>
        </div>
        <!-- Carga : Inicio -->

        <app>
            <component render-mode="Server" type="typeof(App)" />
        </app>

        <script src="_framework/blazor.server.js"></script>

        <script src="_content/Blazored.Modal/blazored.modal.js"></script>

        <script src="_content/Blazorise/blazorise.js"></script>
        <script src="_content/Blazorise.Bootstrap/blazorise.bootstrap.js"></script>

        <script src="js/vendor.min.js"></script>

        <script src="js/materialdesign.init.js"></script>

        <script src="js/app.js"></script>
        @*ToDo: Agregar/Quitar class="sidebar-enable" en modo mobile del <body></body> y data-sidebar-size="condensed" o data-sidebar-size="default"*@
        <script>
            window.ColocarTemaGeneral = () => {
                const body = document.querySelector("body");
                body.setAttribute
                    (
                        "data-layout",
                        '{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": true}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'
                    );
                body.setAttribute
                    (
                        "data-layout-mode",
                        "detached"
                    );

                window.jQuery.App.init();

                window.Waves.init();
                window.feather.replace();
            };

            window.ColocarTemaIngresar = () => {
                const body = document.querySelector("body");
                body.removeAttribute("data-layout");
                body.removeAttribute("data-layout-mode");

                window.Waves.init();
                window.feather.replace();
            };
        </script>

    </body>
</html>
